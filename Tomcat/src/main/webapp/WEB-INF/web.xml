<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!-- Grading System Servlet -->
  <servlet>
    <servlet-name>GradingSystemServlet</servlet-name>
    <servlet-class>com.gradingSystem.servlets.GradingSystemServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GradingSystemServlet</servlet-name>
    <url-pattern>/homepage</url-pattern>
  </servlet-mapping>

  <!-- Role Servlet -->
  <servlet>
    <servlet-name>RoleServlet</servlet-name>
    <servlet-class>com.gradingSystem.servlets.role.RoleServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>RoleServlet</servlet-name>
    <url-pattern>/role</url-pattern>
  </servlet-mapping>

  <!-- Grades Servlet -->
  <servlet>
    <servlet-name>GradesServlet</servlet-name>
    <servlet-class>com.gradingSystem.servlets.role.studentServlets.GradesServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GradesServlet</servlet-name>
    <url-pattern>/role/student/viewGrades</url-pattern>
  </servlet-mapping>

  <!-- SuperAdmin Menu Servlet -->
  <servlet>
    <servlet-name>SuperMenuServlet</servlet-name>
    <servlet-class>com.gradingSystem.servlets.role.superAdminServlets.SuperMenuServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SuperMenuServlet</servlet-name>
    <url-pattern>/role/superAdmin/menu/viewSuperAdminOptions</url-pattern>
  </servlet-mapping>

  <!-- Servlet for Add Admin -->
  <servlet>
    <servlet-name>AddAdminServlet</servlet-name>
    <servlet-class>com.gradingSystem.servlets.role.superAdminServlets.AddAdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddAdminServlet</servlet-name>
    <url-pattern>/role/superAdmin/menu/addAdmin</url-pattern>
  </servlet-mapping>


  <!-- Servlet for Remove Admin -->

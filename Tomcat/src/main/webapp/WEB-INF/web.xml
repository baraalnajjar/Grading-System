    <servlet-class>com.gradingSystem.servlets.role.teacherServlets.TeacherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TeacherServlet</servlet-name>
    <url-pattern>/role/teacher/courses</url-pattern>
  </servlet-mapping>

  <!-- servlet for EditGrades -->
  <servlet>
    <servlet-name>EditGradesServlet</servlet-name>
    <servlet-class>com.gradingSystem.servlets.role.teacherServlets.EditGradesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditGradesServlet</servlet-name>
    <url-pattern>/role/teacher/editGrades</url-pattern>
  </servlet-mapping>


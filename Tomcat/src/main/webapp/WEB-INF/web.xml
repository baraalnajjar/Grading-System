  </servlet>
  <servlet-mapping>
    <servlet-name>RemoveAdminServlet</servlet-name>
    <url-pattern>/role/superAdmin/menu/removeAdmin</url-pattern>
  </servlet-mapping>


  <!-- Servlet for View Admins -->
  <servlet>
    <servlet-name>ViewAdminsServlet</servlet-name>
    <servlet-class>com.gradingSystem.servlets.role.superAdminServlets.ViewAdminsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewAdminsServlet</servlet-name>
    <url-pattern>/role/superAdmin/menu/viewAdmins</url-pattern>
  </servlet-mapping>


